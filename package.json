{
    "private": true,
    "scripts": {
        "hot": "webpack-dev-server --mode development --inline --hot",
        "watch": "webpack --mode development --watch",
        "dev": "webpack --mode development",
        "production": "NODE_ENV=production webpack --mode production",
        "analyze": "NODE_ENV=production webpack --mode production --analyze",
        "format": "prettier 'resources/**/*.{css,js,json,css,ts,tsx}' '*.{js,css}' --write",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "@inertiajs/inertia": "^0.1.3",
        "@inertiajs/inertia-react": "^0.1.2",
        "@tailwindcss/custom-forms": "^0.2.1",
        "codemirror": "^5.49.2",
        "date-fns": "^2.4.1",
        "lodash": "^4.17.15",
        "qs": "^6.9.0",
        "react": "^16.8.3",
        "react-codemirror2": "^6.0.0",
        "react-datepicker": "^2.9.6",
        "react-dom": "^16.8.3",
        "react-frame-component": "^4.1.1"
    },
    "devDependencies": {
        "@babel/core": "^7.4.3",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/plugin-transform-runtime": "^7.4.3",
        "@babel/preset-env": "^7.4.3",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@fullhuman/postcss-purgecss": "^1.2.0",
        "@types/lodash": "^4.14.144",
        "@types/qs": "^6.5.3",
        "@types/react": "^16.8.13",
        "@types/react-datepicker": "^2.9.3",
        "@types/react-dom": "^16.8.3",
        "@types/react-frame-component": "^4.1.1",
        "@types/webpack-env": "^1.13.9",
        "babel-loader": "^8.0.5",
        "clean-webpack-plugin": "^2.0.1",
        "css-loader": "^2.1.1",
        "cssnano": "^4.1.10",
        "fork-ts-checker-webpack-plugin": "^1.2.0",
        "husky": "^3.0.9",
        "jest": "^24.8.0",
        "lint-staged": "^8.1.5",
        "mini-css-extract-plugin": "^0.5.0",
        "postcss-easy-import": "^3.0.0",
        "postcss-loader": "^3.0.0",
        "postcss-preset-env": "^6.6.0",
        "prettier": "^1.18.2",
        "tailwindcss": "^1.0.0",
        "ts-loader": "^5.3.3",
        "typescript": "^3.4.2",
        "webpack": "^4.29.6",
        "webpack-bundle-analyzer": "^3.3.2",
        "webpack-cli": "^3.3.0",
        "webpack-dev-server": "^3.3.1",
        "webpack-manifest-plugin": "^2.0.4",
        "webpack-merge": "^4.2.1",
        "webpack-notifier": "^1.7.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{css,js,ts,tsx}": [
                "prettier --write",
                "git add"
            ],
            "*.php": [
                "php ./vendor/bin/php-cs-fixer fix --config .php_cs",
                "git add"
            ]
        },
        "ignore": [
            "public/**/*"
        ]
    }
}
